---
import AguadaIcon from "./icons/Aguada.astro"
import PencilIcon from "./icons/Pencil.astro"
import RollerIcon from "./icons/Roller.astro"
import CincelIcon from "./icons/Cincel.astro"
import GrabadoIcon from "./icons/Cincel.astro"
import TexturizadoIcon from "./icons/Cincel.astro"

const TAGS = {
  AGUADA: {
    name: "Aguada",
    class: "bg-black text-white",
    icon: AguadaIcon,
  },
  TONAL: {
    name: "Tonal",
    class: "bg-[#003159] text-white",
    icon: PencilIcon,
  },
  CALCOGRAFIA: {
    name: "Calcografia",
    class: "bg-[#003159] text-white",
    icon: RollerIcon,
  },
  RELIEVE: {
    name: "Relieve",
    class: "bg-[#003159] text-white",
    icon: CincelIcon,
  },
  GRABADO: {
    name: "Grabado",
    class: "bg-[#003159] text-white",
    icon: GrabadoIcon,
  },
  TEXTURIZADO: {
    name: "Texturizado",
    class: "bg-[#003159] text-white",
    icon: TexturizadoIcon,
  },
}
const PROJECTS = [
  {
    title: "Autorregulacion",
    description:
      "Carton entelado 18x25cm 2022",
    image: "/projects/h-1.webp",
    tags: [TAGS.TONAL],
  },
  {
    title: "Extasis",
    description:
      "Carton entelado 18x25cm 2024",
    image: "/projects/v-1.webp",
    tags: [TAGS.TONAL],
  },
  {
    title: "Rostros en crisis",
    description:
      "Escultura Varios tama√±os 2023",
    image: "/projects/v-3.webp",
    tags: [TAGS.RELIEVE],
  },
  {
    title: "Babilonia",
    description:
      "Papel algodon 50x50cm 2023",
    image: "/projects/v-2.webp",
    tags: [TAGS.GRABADO],
  },
  {
    title: "Piscis",
    description:
      "Canvas 120x80cm 2023",
    image: "/projects/v-5.webp",
    tags: [TAGS.TEXTURIZADO],
  },
]
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags }) => (
  <article class="flex flex-col space-x-0 space-y-1 group md:flex-row md:space-x-8 md:space-y-0">
  <div class="w-full md:w-1/3">
    <div class="relative flex flex-col items-center max-w-sm bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
      <img alt="Foto de proyecto" class="rounded-t-lg" src={image}/>
    </div>
    <div class="p-5">
      <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
      {title}
      </h3>
      <div class="flex flex-wrap mt-1">
      <ul class="flex flex-row mb-1 gap-x-2">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>
      <div class="mt-2 text-wrap text-gray-700 dark:text-gray-400">{description}</div>
    </div>
  </div>

      <footer class="flex items-end justify-start mt-4 gap-x-4">
      </footer>
  </div>
</article>
    ))
  }
</div>